---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const projects = [
  {
  title: 'Limpieza completa con reinstalacion de sistema',
  category: 'Mantenimiento',
  description: 'Limpieza fisica de polvo interno, reemplazo de pasta termica del procesador, formateo completo e instalacion de Windows con drivers actualizados.',
  duration: '4 horas',
  difficulty: 'Media',
  image: 'üîß'
  },
  {
  title: 'Reinstalacion de sistema',
  category: 'Mantenimiento',
    description: 'Intento de recuperacion de disco duro con sectores danados. Diagnostico completo revelo problemas con el firmware que impidieron la recuperacion total.',
    duration: '3 horas',
    difficulty: 'Alta',
    image: 'üíæ'
  },
  {
  title: 'Revisi√≥n sin video y mantenimiento general',
  category: 'Diagn√≥stico y reparaci√≥n',
  description: 'La PC no daba video por un mal contacto en la memoria RAM y un cable SATA mal colocado. Se reacomodaron los componentes, se realizaron pruebas de arranque y se efectu√≥ una limpieza interna completa retirando polvo acumulado en ventiladores, fuente y placa madre.',
  duration: 'Aprox. 2 horas y 30 minutos',
  difficulty: 'Baja',
  image: 'üß∞'
}

];

const getDifficultyColor = (difficulty: string) => {
  switch(difficulty) {
    case 'Alta': return '#ef4444';
    case 'Media': return '#eab308';
    case 'Baja': return '#22c55e';
    default: return 'var(--color-itb-gray-light)';
  }
};
---

<Layout title="Proyectos | ITB Mantenimiento">
  <Header />
  
  <main style="padding-top: 6rem; min-height: 100vh; background-color: var(--color-itb-black);">
    <!-- Hero Section -->
    <section style="padding: 5rem 1rem; background: linear-gradient(to bottom, var(--color-itb-gray-dark), var(--color-itb-black));">
      <div style="max-width: 64rem; margin: 0 auto; text-align: center;">
        <h1 style="font-size: 3.75rem; font-weight: bold; margin-bottom: 1.5rem;">
          Nuestros <span style="color: var(--color-itb-pink);">Proyectos</span>
        </h1>
        <p style="font-size: 1.25rem; color: var(--color-itb-gray-light);">
          Casos de √©xito y trabajos realizados
        </p>
      </div>
    </section>

    <!-- Projects Grid -->
    <section style="padding: 5rem 1rem;">
      <div style="max-width: 80rem; margin: 0 auto;">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem;">
          {projects.map(project => (
            <div style="background-color: var(--color-itb-gray-dark); padding: 1.5rem; border-radius: 0.5rem; border: 2px solid var(--color-itb-gray); transition: all 0.3s ease;"
                 onmouseover="this.style.borderColor='var(--color-itb-pink)'; this.style.transform='translateY(-5px)';"
                 onmouseout="this.style.borderColor='var(--color-itb-gray)'; this.style.transform='translateY(0)';">
              <div style="font-size: 4rem; margin-bottom: 1rem; text-align: center;">{project.image}</div>
              
              <span style="display: inline-block; background-color: var(--color-itb-pink); color: white; font-size: 0.875rem; padding: 0.25rem 0.75rem; border-radius: 9999px; margin-bottom: 0.75rem;">
                {project.category}
              </span>
              
              <h3 style="font-size: 1.25rem; font-weight: bold; margin-bottom: 0.75rem; color: white;">{project.title}</h3>
              <p style="color: var(--color-itb-gray-light); margin-bottom: 1rem; line-height: 1.5;">{project.description}</p>
              
              <div style="display: flex; justify-content: space-between; font-size: 0.875rem;">
                <span style="color: var(--color-itb-gray-light);">
                  ‚è±Ô∏è {project.duration}
                </span>
                <span style={`color: ${getDifficultyColor(project.difficulty)};`}>
                  ‚óè {project.difficulty}
                </span>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section style="padding: 5rem 1rem; background-color: var(--color-itb-gray-dark);">
      <div style="max-width: 72rem; margin: 0 auto;">
        <h2 style="font-size: 2.25rem; font-weight: bold; text-align: center; margin-bottom: 3rem;">
          Estad√≠sticas del <span style="color: var(--color-itb-pink);">Proyecto</span>
        </h2>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2rem; text-align: center;">
          <div>
            <div style="font-size: 3rem; font-weight: bold; color: var(--color-itb-pink); margin-bottom: 0.5rem;">1</div>
            <div style="color: var(--color-itb-gray-light);">Equipos Reparados</div>
          </div>
          <div>
            <div style="font-size: 3rem; font-weight: bold; color: var(--color-itb-pink); margin-bottom: 0.5rem;">50%</div>
            <div style="color: var(--color-itb-gray-light);">Tasa de √âxito</div>
          </div>
          <div>
            <div style="font-size: 3rem; font-weight: bold; color: var(--color-itb-pink); margin-bottom: 0.5rem;">100%</div>
            <div style="color: var(--color-itb-gray-light);">Satisfacci√≥n</div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>