---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout title="Contacto | ITB Mantenimiento">
  <Header />
  
  <main class="pt-24 min-h-screen bg-[--color-itb-black]">
    <!-- Hero Section -->
    <section class="py-20 px-4 bg-gradient-to-b from-[--color-itb-gray-dark] to-[--color-itb-black]">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          <span class="text-[--color-itb-pink]">Contáctanos</span>
        </h1>
        <p class="text-xl text-[--color-itb-gray-light]">
          Estamos listos para ayudarte con tu equipo
        </p>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-20 px-4">
      <div class="max-w-7xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12">
          <!-- Info de Contacto -->
          <div>
            <h2 class="text-3xl font-bold mb-8">
              Información de <span class="text-[--color-itb-pink]">Contacto</span>
            </h2>
            
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="text-3xl text-[--color-itb-pink]">📧</div>
                <div>
                  <h3 class="font-bold text-lg mb-1">Email</h3>
                  <p class="text-[--color-itb-gray-light]">info@itbmantenimiento.com</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="text-3xl text-[--color-itb-pink]">📱</div>
                <div>
                  <h3 class="font-bold text-lg mb-1">Teléfono</h3>
                  <p class="text-[--color-itb-gray-light]">+54 9 221 XXX-XXXX</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="text-3xl text-[--color-itb-pink]">📍</div>
                <div>
                  <h3 class="font-bold text-lg mb-1">Ubicación</h3>
                  <p class="text-[--color-itb-gray-light]">Berisso, Buenos Aires, Argentina</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="text-3xl text-[--color-itb-pink]">🕐</div>
                <div>
                  <h3 class="font-bold text-lg mb-1">Horario</h3>
                  <p class="text-[--color-itb-gray-light]">Lunes a Viernes: 9:00 - 18:00</p>
                  <p class="text-[--color-itb-gray-light]">Sábados: 9:00 - 13:00</p>
                </div>
              </div>
            </div>

            <!-- Redes Sociales (Opcional) -->
            <div class="mt-12">
              <h3 class="font-bold text-lg mb-4">Síguenos</h3>
              <div class="flex space-x-4">
                <a href="#" class="text-3xl hover:text-[--color-itb-pink] transition-colors" aria-label="Facebook">📘</a>
                <a href="#" class="text-3xl hover:text-[--color-itb-pink] transition-colors" aria-label="Instagram">📷</a>
                <a href="#" class="text-3xl hover:text-[--color-itb-pink] transition-colors" aria-label="Twitter">🐦</a>
              </div>
            </div>
          </div>

          <!-- Formulario -->
          <div>
            <h2 class="text-3xl font-bold mb-8">
              Envíanos un <span class="text-[--color-itb-pink]">Mensaje</span>
            </h2>
            <ContactForm />
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>